{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/portfolio/index.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/send-email.js": {
      "memory": 512,
      "maxDuration": 15
    }
  },
  "rewrites": [
    {
      "source": "/api/portfolio",
      "destination": "/api/portfolio/index.js"
    },
    {
      "source": "/api/portfolio/:path*",
      "destination": "/api/portfolio/index.js"
    }
  ]
} 