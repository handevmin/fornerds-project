{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/portfolio/index.js": {
      "memory": 1024,
      "maxDuration": 30
    },
    "api/send-email.js": {
      "memory": 512,
      "maxDuration": 15
    }
  },
  "routes": [
    {
      "src": "/api/portfolio$",
      "dest": "/api/portfolio/index.js"
    },
    {
      "src": "/api/portfolio/(.*)",
      "dest": "/api/portfolio/index.js"
    },
    {
      "src": "/api/send-email$",
      "dest": "/api/send-email.js"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
} 